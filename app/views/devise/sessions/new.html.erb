<div class="container">
  <div class="session_area">
    <h3 class="session_title">ログイン画面</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="regist_field">
        <%= f.label :email, "Eメール", class: "regist_field_text" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "regist_field_box" %>
      </div>

      <div class="regist_field">
        <%= f.label :password, "パスワード", class: "regist_field_text" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "regist_field_box" %>
      </div>

      <div class="actions">
        <div class="actions_box">
          <%= f.submit "Log in" , class: "actions_box_btn"%>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>