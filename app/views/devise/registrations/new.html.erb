<div class="container">
  <div class="regist_area">

    <h3 class="regist_title">新規登録画面</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="regist_field">
        <%= f.label :name, "名前", class: "regist_field_text" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "regist_field_box" %>
      </div>

      <div class="regist_field">
        <%= f.label :image_url, "プロフィール画像", class: "regist_field_text"  %><br />
        <%= f.file_field :image_url, autofocus: true, autocomplete: "image_url", class: "regist_field_image" %>
      </div>

      <div class="regist_field">
        <%= f.label :introduction, "自己紹介/経歴/受賞歴など", class: "regist_field_text"  %><br />
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "regist_field_box" %>
      </div>

      <div class="field">
        <%= f.hidden_field :pc, value: 10000, autofocus: true, autocomplete: "pc" %>
      </div>

      <div class="regist_field">
        <%= f.label :email, "Eメール", class: "regist_field_text"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "regist_field_box" %>
      </div>

      <div class="regist_field">
        <%= f.label :password, "パスワード", class: "regist_field_text"  %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "regist_field_box" %>
      </div>

      <div class="regist_field">
        <%= f.label :password_confirmation, "パスワード再入力", class: "regist_field_text"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "regist_field_box" %>
      </div>

      <div class="actions">
        <div class="actions_box">
          <%= f.submit "Sign up", class: "actions_box_btn" %>
        </div>  
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
