<div class="container-fluid">
  <div class="container">
    <div class="header">
      <div class="header_logo">
        ARTY VALUE
      </div>
      <div class="header_btn">
        <% if user_signed_in? %>
          <div class="header_btn_left">
            <%= link_to "Signup", new_user_registration_path, class: 'header_btn_left-link' %>
          </div>
          <div class="header_btn_right">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'header_btn_right-link' %>
          </div>
        <% else %>
          <div class="header_btn_left">
            <%= link_to "Signup", new_user_registration_path, class: 'header_btn_left-link' %>
          </div>
          <div class="header_btn_right">
            <%= link_to "Login", new_user_session_path, class: 'header_btn_right-link' %>
          </div>
        <% end %>          
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="container">
    <div class="top">
      <div class="top_exhibit">
        <div class="top_exhibit_icon">
          <a class="top_exhibit_icon-link" href="/arts/new"><i class="fas fa-palette"></i></a>
        </div>
        <div class="top_exhibit_text">
          <a class="top_exhibit_text-link" href="/arts/new">出典する</a>
        </div>
      </div>
      <div class="top_search">
        <div class="top_search-icon">
          <i class="fas fa-search"></i>
        </div>
        <div class="top_search-text">
          ARTを探す
        </div>
      </div>
    </div>

    <div class="content">
      <% @arts.each do |art| %>
        <div class="content_image">
          <a href="/arts/<%= art.id %>"><%= image_tag "#{art.image_url}", class: 'content_image-link', alt: '作品の画像' %></a>
        </div>
        <div class="content_title">
          <%= art.title %>
        </div>
        <div class="content_status">
          <div class="content_status_artist">
            <%= art.user.name %>
          </div>
          <div class="content_status_price">
            <%= art.price %><span class="content_status_price-unit">円</span>
          </div>
          <div class="content_status_icon">
            <div class="content_status_icon_i">
              <a href="/arts/<%= art.id %>">
                <i class="fas fa-coins content_status_icon_i-link"></i>
              </a>
              <a href="/arts/<%= art.id %>">
                <div class="content_status_icon_i-more">
                  入札/詳細へ
                </div>
              </a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="container">
    <div class="footer">
      <div class="footer_logo">
        ARTY VALUE
      </div>
      <div class="footer_list">
        <ul>
          <li>運営会社</li>
          <li>プライバシーポリシー</li>
        </ul>
      </div>
      <div class="footer_copy">
        ©️2020 Arty Value all rights reserved
      </div>
    </div>
  </div>  
</div>