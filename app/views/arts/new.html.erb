<div class="container-fluid">
  <div class="container">
    <div class="header">
      <div class="header_logo">
        ARTY VALUE
      </div>
      <div class="header_btn">
        <% if user_signed_in? %>
          <div class="header_btn_left">
            <%= link_to "Home", "/arts", class: 'header_btn_left-link' %>
          </div>
          <div class="header_btn_right">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'header_btn_right-link' %>
          </div>
        <% else %>
          <div class="header_btn_left">
            <%= link_to "Signup", new_user_registration_path, class: 'header_btn_left-link' %>
          </div>
          <div class="header_btn_right">
            <%= link_to "Login", new_user_session_path, class: 'header_btn_right-link' %>
          </div>
        <% end %>          
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="arts_new_area">
    <%= form_for @art do |f| %>
    <div class="arts_new_area_title">
      作品を出典する
    </div>
    <div class="arts_new_area_head">
      作品のタイトルを入力
    </div>
      <%= f.text_field :title, class: "arts_new_area_box" %>
    <div class="arts_new_area_head">
      作品の画像をアップロード
    </div>
      <%= f.file_field :image_url, class: "arts_new_area_image" %>
    <div class="arts_new_area_head">
      作品の説明を入力
    </div>
      <%= f.text_area :description, class: "arts_new_area_disbox" %>
      <%= f.hidden_field :price, value: 0 %>
      <%= f.hidden_field :value_point, value: 50 %>
      <%= f.hidden_field :status, value: 1 %>
      <%= f.submit '出典する', class: "arts_new_area_btn"%>
    <% end %>
  </div>
</div>


<div class="container-fluid">
  <div class="container">
    <div class="footer">
      <div class="footer_logo">
        ARTY VALUE
      </div>
      <div class="footer_list">
        <ul>
          <li><a class="footer_list_text" href="https://rayward.jp/">運営会社</a></li>
          <li><a class="footer_list_text" href="https://rayward.jp/wp-content/themes/rayward/privacy.html">プライバシーポリシー</a></li>
        </ul>
      </div>
      <div class="footer_copy">
        ©️2020 Arty Value all rights reserved
      </div>
    </div>
  </div>  
</div>